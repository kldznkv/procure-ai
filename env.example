# ProcureAI Environment Configuration
# Copy this file to .env.local and fill in your values

# =============================================================================
# REQUIRED - Core Application Settings
# =============================================================================

# Application Environment
NODE_ENV=production
NEXT_PUBLIC_APP_URL=https://your-domain.com

# =============================================================================
# REQUIRED - Database Configuration (Supabase)
# =============================================================================

# Supabase Project URL
NEXT_PUBLIC_SUPABASE_URL=your_supabase_project_url

# Supabase Anonymous Key (Public)
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key

# Supabase Service Role Key (Private - Server-side only)
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key

# =============================================================================
# REQUIRED - AI Configuration (Anthropic Claude)
# =============================================================================

# Anthropic Claude API Key
ANTHROPIC_API_KEY=your_anthropic_api_key

# =============================================================================
# REQUIRED - Authentication (Clerk)
# =============================================================================

# Clerk Publishable Key
NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY=your_clerk_publishable_key

# Clerk Secret Key
CLERK_SECRET_KEY=your_clerk_secret_key

# Clerk JWT Key (for webhooks)
CLERK_WEBHOOK_SECRET=your_clerk_webhook_secret

# =============================================================================
# OPTIONAL - Caching Configuration (Redis)
# =============================================================================

# Redis Configuration (for production caching)
REDIS_ENABLED=true
REDIS_URL=your_redis_url
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=your_redis_password
REDIS_DB=0
REDIS_TTL=3600

# =============================================================================
# OPTIONAL - Vector Database (for semantic search)
# =============================================================================

# Vector Database Configuration
VECTOR_DB_URL=your_vector_db_url
VECTOR_DB_API_KEY=your_vector_db_api_key

# =============================================================================
# OPTIONAL - External Services
# =============================================================================

# Email Service (for notifications)
SMTP_HOST=your_smtp_host
SMTP_PORT=587
SMTP_USER=your_smtp_user
SMTP_PASSWORD=your_smtp_password

# File Storage (if using external storage)
STORAGE_BUCKET=your_storage_bucket
STORAGE_REGION=your_storage_region

# =============================================================================
# OPTIONAL - Monitoring & Analytics
# =============================================================================

# Sentry (for error tracking)
SENTRY_DSN=your_sentry_dsn

# Analytics
GOOGLE_ANALYTICS_ID=your_ga_id

# =============================================================================
# OPTIONAL - Development Settings
# =============================================================================

# Debug Mode (set to false in production)
DEBUG=false

# Log Level (error, warn, info, debug)
LOG_LEVEL=info

# =============================================================================
# PRODUCTION SECURITY SETTINGS
# =============================================================================

# CORS Origins (comma-separated)
CORS_ORIGINS=https://your-domain.com,https://www.your-domain.com

# Rate Limiting
RATE_LIMIT_MAX=100
RATE_LIMIT_WINDOW=900000

# Session Configuration
SESSION_SECRET=your_session_secret_key

# =============================================================================
# DEPLOYMENT SETTINGS
# =============================================================================

# Build Configuration
NEXT_TELEMETRY_DISABLED=1

# Performance
NEXT_PRIVATE_DEBUG_CACHE=0
